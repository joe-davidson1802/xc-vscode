{
  "name": "xc-vscode",
  "repository": {
    "url": "https://github.com/joerdav/xc-vscode"
  },
  "displayName": "XC",
  "description": "",
  "version": "0.0.6",
  "publisher": "xc-vscode",
  "icon": "resources/xc.png",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:xc-vscode.xcTasks"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xc-vscode-container",
          "title": "XC",
          "icon": "resources/xc.svg"
        }
      ]
    },
    "commands": [
      {
          "command": "xc-vscode.refreshEntry",
          "title": "Refresh",
          "icon": {
              "light": "resources/light/refresh.svg",
              "dark": "resources/dark/refresh.svg"
          }
      },
      {
        "command": "xc-vscode.xc",
        "title": "xc: Run Task"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "xc-vscode.xcTasks",
          "name": "XC Tasks"
        }
      ],
      "xc-vscode-container": [
        {
          "id": "xc-vscode.xcTasksContainer",
          "name": "XC Tasks"
        }
      ]
    },
    "menus": {
      "view/title": [
          {
              "command": "xc-vscode.refreshEntry",
              "when": "view == xc-vscode.xcTasks",
              "group": "navigation"
          }
      ]
  }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.62.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4",
    "@vscode/test-electron": "^2.0.3"
  }
}
